{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "yes:explosion_sparks",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/particle/sparks2"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.width = 1.3;variable.height = 0.06;"
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": "20+math.random(0,5)"
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 1
			},
			"minecraft:emitter_shape_point": {
				"direction": ["math.random(-1,1)", "math.random(0.6,1)", "math.random(-1,1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "0.8+ Math.Random(0, 0.6)"
			},
			"minecraft:particle_initial_speed": "math.random(10,30)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, -3.5, 0],
				"linear_drag_coefficient": 1.5
			},
