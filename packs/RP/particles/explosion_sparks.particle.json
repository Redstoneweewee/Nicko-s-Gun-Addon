				"size": ["variable.width*(v.particle_random_1*(1-0.5)+0.5)*(v.particle_lifetime-v.particle_age)", "variable.height*(v.particle_random_1*(1-0.5)+0.5)*(v.particle_lifetime-v.particle_age)"],
				"facing_camera_mode": "lookat_direction",
				"uv": {
					"texture_width": 32,
					"texture_height": 32,
					"uv": [0, 0],
					"uv_size": [32, 32]
				}
			},
			"minecraft:particle_motion_collision": {
				"coefficient_of_restitution": 1,
				"collision_radius": 0.01
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
