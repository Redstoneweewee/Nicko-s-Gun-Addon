{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "yes:explosion_mushroom",
			"basic_render_parameters": {
				"material": "particles_blend_additive_blend",
				"texture": "textures/particle/explosion"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "variable.width = 1;variable.height = 1;"
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": 100
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 5
			},
			"minecraft:emitter_shape_point": {
				"offset": [0, 1, 0],
				"direction": ["math.random(-1,1)", "math.random(-1,1)", "math.random(-1,1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "1+ Math.Random(0.05, 0.1)"
			},
			"minecraft:particle_initial_speed": "math.random(1,12)",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.width*math.pow(v.particle_age*3,0.4)", "variable.height*math.pow(v.particle_age*3,0.4)"],
				"facing_camera_mode": "lookat_direction",
				"uv": {
					"texture_width": 32,
					"texture_height": 32,
					"uv": [0, 0],
					"uv_size": [32, 32]
				}
			},
			"minecraft:particle_motion_collision": {
				"coefficient_of_restitution": 1,
				"collision_radius": 0.01
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}